{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "target": "ES5",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}